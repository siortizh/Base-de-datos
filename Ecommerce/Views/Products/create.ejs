<%- include("../header"); %>
<div class="col-12">
    <h1>Create product</h1>
    <form method="post" action="/products/create">
        <div class="form-group">
            <label for="name">Name</label>
            <input required id="name" placeholder="Product name" class="form-control" type="text"
                name="name">
        </div>
        <div class="form-group">
            <label for="price">Price</label>
            <input required id="price" placeholder="Product price" class="form-control" type="number"
                name="price">
        </div>
        <div class="form-group">
            <button class="btn btn-success">Save</button>
            &nbsp;<a href="/products" class="btn btn-primary">Return</a>
        </div>
    </form>
</div>
<%- include("../footer"); %>